<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe website</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
    <header>
        <h1>Foodie Diary</h1>
    </header>
    <main>
    <h1>My recipes</h1>

    <button class="btn new-recipe" onclick="window.location.href='/addrecipe'">
    New recipe
</button>

  <% if (recipes.length > 0) { %>
    <div class="recipe-list">
        <% recipes.forEach(function(recipe) { %>
            <div class="recipe-card">

                <img
                    src="<%= recipe.image || '/img/placeholder.png' %>"
                    alt="<%= recipe.title %>"
                    class="recipe-thumb"
                >
                
                <div class="recipe-info">
                    <a href="<%= recipe.file %>" class="recipe-title">
                        <%= recipe.title %>
                    </a>

                    <div class="recipe-actions">
                        <form action="/edit/<%= recipe.file %>" method="GET">
                            <button type="submit" class="btn edit">Edit</button>
                        </form>

                        <form action="/delete-recipe" method="POST">
                            <input type="hidden" name="file" value="<%= recipe.file %>">
                            <button
                                type="submit"
                                class="btn delete"
                                onclick="return confirm('Are you sure you want to delete this recipe?')"
                            >
                                Delete
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        <% }); %>
    </div>
<% } else { %>
    <p>You haven't added any recipes yet. Create your first one!</p>
<% } %>

    

    </main>
    <footer>
        <h2>Foodie Diary 2026</h2>
    </footer>
    </div>
</body>
</html>